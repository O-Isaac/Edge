---
interface Props {
    videoId: string,
    videoTitle?: string
}


const { videoId, videoTitle } = Astro.props
---

<section>
    <span class="youtube-title">{videoTitle}</span>
    <lite-youtube class="youtube-player" videotitle={videoTitle}  videoid={videoId}></lite-youtube>
</section>

<style is:inline>
    .youtube-title {
        background-color: white;
        font-size: 1.265rem;
        padding: 0rem 1rem;
        color: black;
        border-radius: .5rem;
        margin-bottom: 1rem;
        display: block;
    }

    [data-theme="light"] .youtube-title {
        background-color: black;
        color: white;
    }
    .youtube-player {
        border-radius: .365rem;
        overflow: hidden;
    }
</style>

<script>
    import '@justinribeiro/lite-youtube';
</script>